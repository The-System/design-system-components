{
	"name": "auds",
	"devDependencies": {
		"autoprefixer": "^7.1.6",
		"browser-sync": "^2.26.3",
		"cfonts": "^2.1.2",
		"chalk": "^2.3.0",
		"express": "^4.16.2",
		"inquirer": "4.0.0",
		"jest-cli": "^22.4.3",
		"node-sass": "^4.9.3",
		"npm-run-all": "^4.1.5",
		"onchange": "^5.2.0",
		"pa11y": "^5.0.4",
		"postcss": "^6.0.14",
		"puppeteer": "^1.8.0",
		"sass-versioning": "^0.4.0",
		"semver": "^5.4.1",
		"treeify": "^1.0.1"
	},
	"bolt": {
		"workspaces": [
			"packages/*/"
		]
	},
	"scripts": {
		"scaffolding": "node ./scripts/helper.js scaffolding",
		"nuke": "npm run delete:node_modules | npm run delete:lib",
		"delete:node_modules": "rm -rf packages/*/node_modules | rm -rf node_modules",
		"delete:lib": "rm -rf packages/*/lib/**",
		"test:unit-test": "jest",
		"test": "node scripts/helper.js test && node ./scripts/a11y.js"
	},
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"packages/*/lib/js/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
